<h1>レシピ投稿者一覧</h1>

<p>いろんな人のレシピをのぞいてみましょう</p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.image %></td>

        <td><%= user.name %></td>
        <td><%= link_to "Show", user %></td>
        <% if @user == current_user %>
          <td><%= link_to "Edit", edit_user_registration_path(user) %></td>
          <td><%= link_to "Destroy", user, method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
